# =============================================================================
# SHARED BOT INFRASTRUCTURE - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your actual values
# Never commit the .env file - it contains sensitive information

# =============================================================================
# SHREDSTREAM CONFIGURATION (IP Whitelisted - No Auth Required)
# =============================================================================
SHREDS_ENDPOINT=https://shreds-ny6-1.erpc.global

# =============================================================================
# JUPITER ULTRA API CONFIGURATION
# =============================================================================
JUPITER_API_KEY=2b58d214-0f97-45a4-b969-548f6137d188

# =============================================================================
# SOLANA RPC ENDPOINTS
# =============================================================================
# Primary RPC endpoint (required)
SOLANA_RPC_ENDPOINT="https://edge.erpc.global?api-key=YOUR_ERPC_API_KEY"

# Backup RPC endpoints (optional but recommended)
SOLANA_RPC_ENDPOINT_BACKUP1="https://api.mainnet-beta.solana.com"
SOLANA_RPC_ENDPOINT_BACKUP2="https://solana-api.projectserum.com"
SOLANA_RPC_ENDPOINT_BACKUP3="https://rpc.ankr.com/solana"

# =============================================================================
# WALLET CONFIGURATION
# =============================================================================
# WARNING: Never commit these keys to git!
# Main trading wallet private key (base58 encoded)
WALLET_PRIVATE_KEY=YOUR_WALLET_PRIVATE_KEY_HERE

# Optional: Hot wallet for smaller trades
HOT_WALLET_PRIVATE_KEY=YOUR_HOT_WALLET_PRIVATE_KEY_HERE

# Optional: Cold wallet for profits (public key only for sending profits)
COLD_WALLET_ADDRESS=YOUR_COLD_WALLET_PUBLIC_KEY_HERE

# =============================================================================
# JITO CONFIGURATION
# =============================================================================
# Jito block engine endpoints
JITO_BLOCK_ENGINE_URL="https://mainnet.block-engine.jito.wtf"
JITO_RELAYER_URL="https://mainnet.relayer.jito.wtf"

# Jito tip account (Jito's official tip account)
JITO_TIP_ACCOUNT=96gYZGLnJYVFmbjzopPSU6QiEV5fGqZNyN9nmNhvrZU5

# =============================================================================
# TRADING CONFIGURATION
# =============================================================================
# Maximum trade size in SOL
MAX_TRADE_SIZE_SOL=10.0

# Minimum profit thresholds per tier (SOL)
MIN_PROFIT_SMALL_TIER=0.5
MIN_PROFIT_MEDIUM_TIER=1.0
MIN_PROFIT_LARGE_TIER=3.0

# Slippage tolerance (basis points, 100 = 1%)
DEFAULT_SLIPPAGE_BPS=100
MAX_SLIPPAGE_BPS=500

# =============================================================================
# RISK MANAGEMENT
# =============================================================================
# Maximum number of concurrent trades
MAX_CONCURRENT_TRADES=5

# Circuit breaker - pause trading after this many consecutive failures
MAX_CONSECUTIVE_FAILURES=10

# Daily profit target in SOL (optional - for auto-shutdown)
DAILY_PROFIT_TARGET_SOL=50.0

# Daily loss limit in SOL (circuit breaker)
DAILY_LOSS_LIMIT_SOL=5.0

# =============================================================================
# MONITORING & ALERTS
# =============================================================================
# Discord webhook for alerts (optional)
DISCORD_WEBHOOK_URL=YOUR_DISCORD_WEBHOOK_URL_HERE

# Telegram bot configuration (optional)
TELEGRAM_BOT_TOKEN=YOUR_TELEGRAM_BOT_TOKEN_HERE
TELEGRAM_CHAT_ID=YOUR_TELEGRAM_CHAT_ID_HERE

# Email alerts (optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
ALERT_EMAIL=your-alerts@gmail.com

# =============================================================================
# LOGGING & METRICS
# =============================================================================
# Log level (error, warn, info, debug, trace)
RUST_LOG=info

# Log file location
LOG_FILE_PATH=/home/ubuntu/logs/trading-bot.log

# Metrics export (Prometheus format)
METRICS_PORT=9090
METRICS_ENABLED=true

# =============================================================================
# DEX CONFIGURATION
# =============================================================================
# Supported DEXs for arbitrage detection
ENABLE_RAYDIUM=true
ENABLE_ORCA=true
ENABLE_SERUM=true
ENABLE_JUPITER=true
ENABLE_DEXLAB=true

# Minimum liquidity requirements (USD)
MIN_LIQUIDITY_USD=10000

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================
# Number of worker threads for opportunity detection
WORKER_THREADS=4

# ShredStream reconnection settings
SHREDSTREAM_RECONNECT_DELAY_MS=5000
SHREDSTREAM_MAX_RECONNECT_ATTEMPTS=10

# Jupiter API timeout (milliseconds)
JUPITER_TIMEOUT_MS=30000

# =============================================================================
# TESTING & DEVELOPMENT
# =============================================================================
# Set to true to enable paper trading (no real transactions)
PAPER_TRADING=false

# Set to true to enable additional debug logging
DEBUG_MODE=false

# Test wallet with small amounts for development
TEST_WALLET_PRIVATE_KEY=YOUR_TEST_WALLET_PRIVATE_KEY_HERE

# =============================================================================
# BACKUP & RECOVERY
# =============================================================================
# Automatic backup intervals
BACKUP_INTERVAL_HOURS=24
BACKUP_LOCATION=/home/ubuntu/backups/

# Database connection (if using persistent storage)
DATABASE_URL=sqlite:///home/ubuntu/data/trading.db

# =============================================================================
# SECURITY
# =============================================================================
# API rate limiting buffer (percentage of actual limit to use)
RATE_LIMIT_BUFFER_PERCENT=80

# Encrypt wallet keys (set to true to use encrypted key storage)
ENCRYPT_WALLET_KEYS=false
ENCRYPTION_PASSWORD=YOUR_ENCRYPTION_PASSWORD_HERE

# Enable IP whitelisting for admin endpoints
ADMIN_IP_WHITELIST=127.0.0.1,YOUR_IP_ADDRESS_HERE